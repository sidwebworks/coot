{
  "name": "zors",
  "version": "0.1.3",
  "license": "MIT",
  "type": "module",
  "author": "Sidwebworks",
  "description": "A CLI Framework",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js"
  },
  "scripts": {
    "build": "NODE_ENV=production tsup src/index.ts --dts-resolve",
    "dev": "NODE_ENV=development tsup src/index.ts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "execa": "^6.1.0"
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    },
    "github": {
      "release": true
    }
  }
}
